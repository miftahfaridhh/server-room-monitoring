String cmd;

void setup() {
 Serial.begin(9600);
}

void loop(){
//  #Serial.print("Siap");
  if (Serial.available()>0){
    //delay(500);
    char a;
    a = Serial.read();
    if (a==13){
      Serial.print(cmd);
      cmd = "";
    }
    else{
      cmd += String(a);
    }
    Serial.print(String(a));
    delay(500);
    if (a=='1'){
      Serial.println("ini satu");
      delay(1000); 
      }
    }
  delay(100); 
}
